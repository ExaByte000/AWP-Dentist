<Page x:Class="Stomotolog.View.AuthUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Stomotolog.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>АВТОРИЗАЦИЯ</TextBlock>
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="LogInTextBox"></TextBox> <!--Text="qwe"-->
            <Separator Opacity="0" Height="10"/>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="AuthPasswordBox"></PasswordBox> <!--Password="qwe"-->
            <Separator Opacity="0" Height="10"/>
            <Button x:Name="SindInButton" Click="SingInButton_Click" Cursor="Hand">Войти</Button>
            <Separator Opacity="0" Height="10"/>
            <Button x:Name="RegTextBlock" Click="RegButton_Click">Зарегестрироваться</Button>
        </StackPanel>
    </Grid>
</Page>
